<Window x:Class="ProjectPRN212.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN212"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Nền gradient dịu mắt -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#e0c3fc" Offset="0"/>
                <GradientStop Color="#8ec5fc" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Nội dung trung tâm -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Chào mừng đến với hệ thống quản lý kỳ thi lái xe"
                       FontSize="26" FontWeight="Bold" Foreground="#333"
                       TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,30"/>

            <Button Content="🔐 Đăng nhập"
                    Width="200" Height="50"
                    Background="#4a90e2"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="Login_Click"
                    />
        </StackPanel>
    </Grid>
</Window>
